<% layout('../views/layouts/boilerplate.ejs') -%>
<body>
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter{
            margin-right: 2rem;
            text-align: center;
            margin-top: 1.2rem;
            opacity: 0.8;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filter-text{
            font-size: 0.8rem;
        }
        .text-info{
            display: none;
            
        }
        .text-switch{
            border: 1px solid black;
            border-radius: 10px;
            height: 3.25rem;
            display: flex;
            align-items: center;
            padding: 2px;
        }
    </style>

    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p class="filter-text">Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <p class="filter-text">Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house"></i></div>
            <p class="filter-text">Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></i></div>
            <p class="filter-text">Beachfront</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p class="filter-text">Islands</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p class="filter-text">Top cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p class="filter-text">Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p class="filter-text">Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p class="filter-text">Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house-flood-water"></i></div>
            <p class="filter-text">Lakefronts</p>
        </div>
        <div class="text-switch ms-auto ">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
        </div>
    </div>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        <% allListings.forEach(listing => { %>
            <a href="/listings/<%= listing._id %>" class="listings-links">
                <div class="card col" style="width: 265px;">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 265px;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            <% if (listing.price && typeof listing.price === 'number') { %>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %> night
                            <% } else { %>
                                Price not available
                            <% } %>
                            <i class="text-info">&nbsp; + &nbsp;18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>
    <script>
        let toggleSwitch = document.getElementById("flexSwitchCheckDefault");
        toggleSwitch.addEventListener("click",()=>{
            let textInfo = document.getElementsByClassName("text-info");
            for(let info of textInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline"
                }else{
                    info.style.display = "none"
                }
            }
        })
    </script>
</body>
